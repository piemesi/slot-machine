{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "paths": {
      "apputils/*": [
        "./src/utils/*"
      ],
      "approot/*": [
        "./src/app/*"
      ],
      "*": [
        "types/*"
      ]
    },
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "esNext",
     "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "target": "es5",
     "*.json": {
      "loader": "json"
    },
    "lib": [
      "es6",
      "es2016",
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./src/**/**/**/*"
  ]
}
